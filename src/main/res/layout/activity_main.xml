<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/flContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/mdmd"
        app:menu="@menu/menu"
        app:headerLayout="@layout/nav_header"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/b_main"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginTop="585px"
        android:layout_marginBottom="585px"
        android:layout_marginStart="165px"
        android:layout_marginEnd="165px"
        android:background="@drawable/daiere"
        tools:ignore="ContentDescription,PxUsage" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginTop="1350px"
        android:layout_marginBottom="435px"
        android:layout_marginEnd="394px"
        android:gravity="center|end"
        android:text="Do you want to check a link?"
        android:textSize="14sp"
        tools:ignore="HardcodedText,PxUsage" />

    <Button
        android:id="@+id/b_link"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginTop="1350px"
        android:layout_marginBottom="435px"
        android:layout_marginStart="686px"
        android:layout_marginEnd="118px"
        android:gravity="center|start"
        android:paddingStart="10px"
        android:paddingTop="21px"
        android:text="Click here"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/normal_font2"
        tools:ignore="HardcodedText,PxUsage,RtlSymmetry" />

</androidx.drawerlayout.widget.DrawerLayout>
